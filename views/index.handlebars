<!-- modal -->
<div class="modal fade" id="getCodeModal" tabindex="-1" role="dialog" aria-labelledby="exampleModalCenterTitle" aria-hidden="true">
    <div class="modal-dialog modal-dialog-centered" role="document">
        <div class="modal-content" id="myInput">
            <div class="modal-body">
                <p>You didn't enter a burger name!</p>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-warning" data-dismiss="modal">Close</button>
            </div>
        </div>
    </div>
</div>

<main class="container">
    <h1>Eat Da Burger!</h1>
    <div class="row">
        <div class="col-md-6">
            <h4>Burger Menu</h4>
            <ul>
                {{#each burgers}}
                    {{#unless eaten}}
                        <li>{{this.id}}. {{this.burger_type}}<button data-id="{{this.id}}" class="btn btn-warning btn-sm devour">Devour it!</button></li>
                    {{/unless}}
                {{/each}}
            </ul>
        </div>
        <div class="col-md-6">
            <h4>Burgers You've Eaten</h4>
            {{#each burgers}}
                {{#if eaten}}
                    <li class="eaten">{{this.id}}. {{this.burger_type}}</li>
                {{/if}}
            {{/each}}
        </div>
    </div>
    <div class="centered">
        <hr>
        <h4>Not what you want? Add your own burger!</h4>
        <form id="addBurger">
            <div class="form-group">
                <label for="burg-type">Type of Burger:</label>
                <input type="text" class="form-control" id="burg-type" name="burger_type">
            </div>
            <button type="submit" id="submit" class="btn btn-warning">Add Burger</button>
        </form>
    </div>
</main>
