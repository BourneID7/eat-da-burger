<main class="container">
    <h1>Eat Da Burger!</h1>
    <div class="row">
        <div class="col-md-6">
            <h3>Burgers to Eat</h3>
            <ul>
                {{#each burgers}}
                    {{#if eaten}}
                        {{eaten = false}}
                        <li>{{this.id}}. {{this.burger_type}}<button data-id="{{this.id}}" class="btn btn-warning devour">Devour it!</button></li>
                    {{/if}}
                {{/each}}
            </ul>
        </div>
        <div class="col-md-6">
            <h3>Burgers You've Eaten</h3>
            {{#each burgers}}
                {{#if eaten}}
                    {{eaten = true}}
                    <li class="eaten">{{this.id}}. {{this.burger_type}}</li>
                {{/if}}
            {{/each}}
        </div>
    </div>
    <div class="centered">
        
    </div>
</main>
